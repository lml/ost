<% @errors = @lcdfc.errors %>

<%= form_for @lcdfc do |f| %>

  <%= f.fields_for :feedback_condition do |nested_form| %>

    <%= render partial: "feedback_conditions/form_fields",
               locals:  { feedback_condition: @lcdfc.feedback_condition,
                          form:               nested_form } %>

  <% end %>

  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>