<%= pageHeading "Consent Forms" %>

<table class="list">
  <tr>
    <th width="50%">Name</th>
    <th width="35%">E-signature Required?</th>
    <th></th>
    <th></th>
  </tr>

<% @consent_forms.each do |consent_form| %>
  <tr>
    <td><%= link_to consent_form.name, consent_form %></td>
    <td><%= tf_to_yn(consent_form.esignature_required) %></td>
    <td><%= edit_button(consent_form) %></td>
    <td><%= trash_button(consent_form) %></td>
  </tr>
<% end %>
</table>

<% navitem(:can_create?, ConsentForm.new) { link_to "New Consent Form", new_consent_form_path } %>