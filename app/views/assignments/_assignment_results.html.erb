<%= sub_section "Cohort: #{assignment.cohort.name}" do %>

  <% registered_students = assignment.cohort.students.visible(present_user).registered.active.std_sort(present_user) %>
  <%= render 'student_results', :title => "Registered", :assignment => assignment, :students => registered_students %>

  <% auditing_students = assignment.cohort.students.visible(present_user).auditing.active.std_sort(present_user) %>
  <%= render 'student_results', :title => "Auditing", :assignment => assignment, :students => auditing_students %>

  <% dropped_students = assignment.cohort.students.visible(present_user).dropped.std_sort(present_user) %>
  <%= render 'student_results', :title => "Dropped", :assignment => assignment, :students => dropped_students %>
<% end %>
