<%
   # Clients of this partial must supply the following variables:
   #   action_search_path
   # Additionally, the client can override any of the following:
  
  @selected_type ||= 'Any'
  @text_query ||= ''
  
%>

<%= form_tag(action_search_path, 
             :method => "post",
             :id => 'action_search_form',
             :remote => true) do %>

  <table width="550px" align="center">
    <tr>
      <td><%= label_tag :text_query, 'Search for:' %></td>
      <td><%= text_field_tag :text_query, @text_query %></td>
      <td><%= label_tag 'in:' %></td>
      <td>
        <%= select_tag 'selected_type', 
            options_for_select(['Any', 'Name', 'Username', 'Email'], @selected_type) %>
      </td>
      <td>
        <%= submit_tag 'Search', :test => "search" %>
      </td>
    </tr>
  </table>
<% end %>