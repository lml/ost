if ($('#user_action_dialog').exists()) { $('#user_action_dialog').remove(); }

$("body").append("<%= escape_javascript(render :partial => 'users/action_dialog') %>");
  
refresh_buttons();
  
$("#user_action_dialog").dialog({ 
    modal: true, 
    height:400, 
    width:600,
    buttons: 
        [{ "text": 'Close',
	       "click": function() { $(this).dialog("close"); },
	       "class": 'test clickable close' 
        }]
});

$("#user_action_dialog").parent().addClass('test dialog');