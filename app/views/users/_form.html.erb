<% @errors = @user.errors %>
<%= form_for(@user) do |f| %>

  <table class="left_heading left_heading_offset">
     <tr>
        <th>Name</th>
        <td><%= full_name(@user) %></td>
     </tr>
     <tr>
        <th>Email</th>
        <td><%= email(@user) %></td>
     </tr>
     <tr>
        <th>Administrator?</th>
        <td><%= f.check_box :is_administrator %></td>
     </tr>
     <tr>
        <th>Disable Account?</th>
        <td><%= check_box_tag "user[disable]", "1", @user.is_disabled? %></td>
     </tr>
  </table>
  
  <p>
     
  <div class="actions">
    <%= f.submit(nil) %>
  </div>
<% end %>
