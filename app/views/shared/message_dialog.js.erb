<%
   @options ||= {}
   @height = @options[:height] || 300
   @width = @options[:width] || 400
   @body ||= yield #'Specify a body argument!'
   @title ||= ''
%>

open_message_dialog(true, <%= @height %>, <%= @width %>, "<%= @title %>", "<%= escape_javascript(@body) %>");

refresh_buttons();
refresh_datetime_pickers();
